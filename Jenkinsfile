pipeline {
    agent any
    
    environment {
        AWS_REGION = 'us-east-1'
        EC2_HOST = '3.212.184.245'
        SSH_KEY = credentials('ec2-ssh-key')
        APP_DIR = '/opt/chat-app'
        EC2_USER = 'ec2-user'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code from GitHub...'
                sh 'echo "‚úÖ Source code checked out from: ${GIT_URL}"'
                sh 'echo "‚úÖ Branch: ${GIT_BRANCH}"'
                sh 'echo "‚úÖ Commit: ${GIT_COMMIT}"'
                sh 'ls -la'
            }
        }
        
        stage('Setup Node.js') {
            steps {
                echo 'Setting up Node.js environment...'
                sh '''
                    export PATH=/usr/local/bin:$PATH
                    if command -v node >/dev/null 2>&1; then
                        echo "‚úÖ Node.js found: $(node --version)"
                        echo "‚úÖ npm found: $(npm --version)"
                    else
                        echo "‚ùå Node.js not found - please install Node.js on Jenkins server"
                        echo "Install commands:"
                        echo "curl -fsSL https://rpm.nodesource.com/setup_18.x | sudo bash -"
                        echo "sudo yum install -y nodejs"
                    fi
                '''
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo 'Installing Node.js dependencies...'
                sh '''
                    export PATH=/usr/local/bin:$PATH
                    if command -v npm >/dev/null 2>&1; then
                        echo "üì¶ Installing dependencies..."
                        npm install
                        echo "‚úÖ Dependencies installed successfully"
                    else
                        echo "‚ö†Ô∏è npm not available, skipping dependency installation"
                        echo "Dependencies will be installed on target server"
                    fi
                '''
            }
        }
        
        stage('Run Tests') {
            steps {
                echo 'Running tests...'
                sh '''
                    export PATH=/usr/local/bin:$PATH
                    if command -v npm >/dev/null 2>&1; then
                        echo "üß™ Running tests..."
                        npm test || echo "‚ö†Ô∏è No tests defined in package.json"
                        echo "‚úÖ Test stage completed"
                    else
                        echo "‚úÖ Tests would run here (npm not available on Jenkins)"
                    fi
                '''
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building application...'
                sh '''
                    echo "üî® Preparing deployment package..."
                    echo "üìã Current directory contents:"
                    ls -la
                    echo "üì¶ Package.json contents:"
                    cat package.json || echo "package.json not found"
                    echo "‚úÖ Build completed - U-connect app ready for deployment"
                '''
            }
        }
        
        stage('Deploy to EC2') {
            steps {
                echo 'Deploying U-connect chat app to EC2...'
                script {
                    sh '''
                        echo "üöÄ Starting deployment to: $EC2_HOST"
                        echo "üìÅ Target directory: $APP_DIR"
                        echo "üéØ Deploying commit: ${GIT_COMMIT}"
                        
                        # Test SSH connectivity
                        echo "üîë Testing SSH connection..."
                        ssh -o StrictHostKeyChecking=no -o ConnectTimeout=10 -i $SSH_KEY $EC2_USER@$EC2_HOST "echo 'SSH connection successful'" || {
                            echo "‚ùå SSH connection failed!"
                            echo "Check if:"
                            echo "1. EC2 instance is running"
                            echo "2. Security group allows SSH (port 22)"
                            echo "3. SSH key is correct"
                            exit 1
                        }
                        
                        # Create and prepare app directory
                        echo "üìÅ Preparing application directory..."
                        ssh -o StrictHostKeyChecking=no -i $SSH_KEY $EC2_USER@$EC2_HOST "
                            sudo mkdir -p $APP_DIR
                            sudo chown $EC2_USER:$EC2_USER $APP_DIR
                            echo 'Directory prepared: $APP_DIR'
                        "
                        
                        # Copy application files
                        echo "üì§ Copying application files..."
                        scp -o StrictHostKeyChecking=no -i $SSH_KEY -r ./* $EC2_USER@$EC2_HOST:$APP_DIR/ || {
                            echo "‚ùå File copy failed!"
                            exit 1
                        }
                        
                        # Deploy and start application
                        echo "üîÑ Installing dependencies and starting application..."
                        ssh -o StrictHostKeyChecking=no -i $SSH_KEY $EC2_USER@$EC2_HOST "
                            cd $APP_DIR
                            echo 'üì¶ Installing Node.js dependencies...'
                            npm install --production
                            
                            echo 'üîÑ Managing PM2 process...'
                            # Stop existing process if running
                            pm2 stop chat-app 2>/dev/null || echo 'No existing process to stop'
                            pm2 delete chat-app 2>/dev/null || echo 'No existing process to delete'
                            
                            # Start new process
                            pm2 start app.js --name chat-app
                            pm2 save
                            
                            echo 'üìä Current PM2 status:'
                            pm2 status
                            
                            echo '‚úÖ Application deployed and started successfully'
                        " || {
                            echo "‚ùå Application deployment failed!"
                            echo "üîç Checking logs..."
                            ssh -o StrictHostKeyChecking=no -i $SSH_KEY $EC2_USER@$EC2_HOST "pm2 logs chat-app --lines 10" || true
                            exit 1
                        }
                        
                        echo "‚úÖ Deployment completed successfully"
                    '''
                }
            }
        }
        
        stage('Health Check') {
            steps {
                echo 'Performing health check...'
                script {
                    sh '''
                        echo "üè• Testing application health..."
                        echo "üåê Checking: http://$EC2_HOST"
                        
                        # Wait for application to fully start
                        echo "‚è≥ Waiting for application to start..."
                        sleep 15
                        
                        # Perform actual health check
                        echo "üîç Testing HTTP connectivity..."
                        if curl -f --max-time 30 --retry 3 --retry-delay 5 http://$EC2_HOST; then
                            echo "‚úÖ Health check passed!"
                            echo "üéâ U-connect app is running and accessible!"
                        else
                            echo "‚ùå Health check failed!"
                            echo "üîç Checking application status on server..."
                            ssh -o StrictHostKeyChecking=no -i $SSH_KEY $EC2_USER@$EC2_HOST "
                                echo 'PM2 status:'
                                pm2 status
                                echo 'Application logs:'
                                pm2 logs chat-app --lines 20
                                echo 'Nginx status:'
                                sudo systemctl status nginx --no-pager
                                echo 'Port 3000 status:'
                                netstat -tlnp | grep 3000 || echo 'Port 3000 not listening'
                            "
                            exit 1
                        fi
                    '''
                }
            }
        }
        
        stage('Post-Deployment Verification') {
            steps {
                echo 'Running post-deployment verification...'
                sh '''
                    echo "üîç Final verification checks..."
                    
                    # Check if application responds with expected content
                    echo "üìÑ Checking application content..."
                    RESPONSE=$(curl -s http://$EC2_HOST)
                    if echo "$RESPONSE" | grep -q "CEEYIT"; then
                        echo "‚úÖ Application content verified"
                    else
                        echo "‚ö†Ô∏è Unexpected application content"
                        echo "Response: $RESPONSE"
                    fi
                    
                    # Log final status
                    ssh -o StrictHostKeyChecking=no -i $SSH_KEY $EC2_USER@$EC2_HOST "
                        echo 'üìä Final deployment status:'
                        pm2 jlist | jq '.[0] | {name: .name, status: .pm2_env.status, uptime: .pm2_env.pm_uptime}'
                    " || echo "jq not available, using basic status"
                    
                    echo "üéØ Deployment verification completed"
                '''
            }
        }
    }
    
    post {
        success {
            echo 'üéâ Webhook-triggered deployment completed successfully!'
            echo "üöÄ Deployed commit: ${env.GIT_COMMIT}"
            echo "üåê App URL: http://${env.EC2_HOST}"
            echo "üì± Test your chat app now!"
        }
        failure {
            echo '‚ùå Webhook-triggered deployment failed!'
            echo "üîç Check the logs above for detailed error information"
            echo "Common issues to check:"
            echo "1. Node.js installed on Jenkins server"
            echo "2. SSH key configured correctly"
            echo "3. EC2 instance running and accessible"
            echo "4. Security groups allow ports 22, 80, 3000"
            echo "5. PM2 and Node.js installed on EC2"
        }
        always {
            echo 'üìä Pipeline execution completed'
            echo "üìÖ Execution time: ${currentBuild.durationString}"
        }
    }
}